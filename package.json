{
  "name": "demo-tools",
  "version": "1.0.0",
  "description": "Command line utility for preparing BridalLive demo data",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format:check": "prettier --list-different '{src,__mocks__,bin}/**/*.js'",
    "format:write": "prettier --write '{src,__mocks__,bin}/**/*.js'",
    "start:help": "ts-node bin/order.bin.ts -h",
    "start:example": "ts-node bin/order.bin.ts pizza beer",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "report:coverage": "npm run test:coverage && codecov"
  },
  "bin": {
    "node-command-line-starter": "./src/bin/order.bin.js",
    "restaurant": "./src/bin/order.bin.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CurioVision/demo-tools"
  },
  "author": "Matt Gabor",
  "homepage": "https://github.com/kreuzerk/node-command-line-starter#readme",
  "dependencies": {
    "boxen": "^2.1.0",
    "commander": "^2.19.0",
    "jsonfile": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.3",
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "replace-json-property": "^1.4.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  }
}
